<script>
// Background stars with mouse movement
const canvas=document.getElementById('bg');
const ctx=canvas.getContext('2d');
let W=canvas.width=window.innerWidth,H=canvas.height=window.innerHeight;
let stars=[],starCount=W>768?200:W>480?120:80;
let mouseX=0,mouseY=0;
window.addEventListener('mousemove',e=>{
  mouseX=e.clientX-W/2;
  mouseY=e.clientY-H/2;
});
class Star{
  constructor(){this.reset();}
  reset(){this.x=Math.random()*W;this.y=Math.random()*H;this.size=Math.random()*1.5+0.5;this.speed=0.2+Math.random()*0.3;}
  update(){
    this.y-=this.speed;
    this.x+=mouseX*0.001; 
    if(this.y<0)this.y=H;
    if(this.x<0)this.x=W;
    if(this.x>W)this.x=0;
  }
  draw(){ctx.beginPath();ctx.arc(this.x,this.y,this.size,0,Math.PI*2);ctx.fillStyle='cyan';ctx.fill();}
}
for(let i=0;i<starCount;i++)stars.push(new Star());
function animate(){
  ctx.fillStyle='#0a1f2c';
  ctx.fillRect(0,0,W,H);
  stars.forEach(s=>{s.update();s.draw();});
  requestAnimationFrame(animate);
}
animate();
window.addEventListener('resize',()=>{
  W=canvas.width=window.innerWidth;
  H=canvas.height=window.innerHeight;
});
</script>
